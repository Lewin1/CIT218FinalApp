@model IEnumerable<CIT218FinalApp.Models.UserViewModel>

@{
    ViewBag.Title = "View Users";
}

<h2>Admin - Users</h2>

@using (@Html.BeginForm())
{
    <div class="container">
        <div id="FilerSearch" class="col-md-8 col-lg-offset-2">
            <div class="form-group">
                @Html.Label("Search by User Name", htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.TextBox("searchByName", null, new { @class = "form-control" })
            </div>

            <div class="col-md-12">
                <input type="submit" value="Find Users" class="btn col-md-4 col-md-offset-2" />
                <input type="reset" value="Reset" onclick="location.href='@Url.Action("UserIndex", "Admin")'" class="btn col-md-4 col-md-offset-2" />
            </div>
        </div>
    </div>
    <br />
}
<p>
    @Html.ActionLink("Create New", "UserCreate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Role)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                @Html.ActionLink("Edit", "UserEdit", new { userName = item.UserName }) |
                @Html.ActionLink("Details", "UserDetails", new { userName = item.UserName }) |
                @Html.ActionLink("Delete", "UserDelete", new { userName = item.UserName })
            </td>
        </tr>
    }

</table>


@Html.ActionLink("Back to List", "UserIndex") |
@Html.ActionLink("Back to Admin Landing", "AdminLanding", "Admin")
